<h1 style="color:#000000;">My Reviews</h1>
<p>
	<% if @my_reviews == nil %>
		You have not created any reviews yet
	<% else %>
		<table class="table table-striped table-hover">
			<tr class="small">
						<th></th>
						<th style="width:20%">Winery </th>
						<th style="width:10%">Rating </th>
						<th style="width:20%">Date Created </th>
						<th style="width:100%">Comments </th>
					</tr>

				<% @my_reviews.each do |review| %>
				
					<tr>
						<td style="width:20%"><ul>
							<% if review.photo.nil? %>
								<%= image_tag(review.winery.photo, size: "100x50", :class => 'img-rounded img-responsive') unless review.winery.photo.nil? %>
								<% else %>
							<%= image_tag(review.photo, size: "100x50", :class => 'img-rounded img-responsive') unless review.photo.nil? %>
							<% end %>
					 </td>
					 <td><%= link_to "#{review.winery.name}", winery_path(review.winery) %></td>
					 <td>
					 	<%= review.rating.to_s + " Stars" %></td>
					 	<td>
					 		<%= review.created_at.strftime("%B %e %Y") %>
					 	</td>
					 	<td>
					 	<%= review.comment %><br>
					</td>
					<td><%= link_to "Edit Review", edit_review_path(review), class: 'btn btn-info' %>
					</td>
				
				<% end %>
		</table>		
	<% end %>
</p>
<p><%= javascript_include_tag "application" %> </p>