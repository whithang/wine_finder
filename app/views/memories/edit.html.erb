<div class="container">
		<div class="row">
			<div class="col-md-8"> 
				<h1>Edit My Memory </h1>
					<p>Update any fields you want to edit:</p>

					<%= simple_form_for @memory, html: {class: 'form-horizontal'}  do |f| %>

						<%= f.input :name, label: "Memory for: " %>
						<div class='row datetimerange'>
							<%= f.input :trip_date, placeholder: "Start", as: :date_picker, wrapper: :ranged_datetime, label: "Trip Start Date" %>
							<%= f.input :trip_date_end, placeholder: "End", as: :date_picker, wrapper: :ranged_datetime, label: "Trip End Date" %>
						</div>
						<%= f.hidden_field :user_id, value: @memory.user_id %>
						<%= f.hidden_field :winery_id, value: @winery.id unless @winery.nil? %>
						<%= f.submit "Update My Memory"%>	

					<% end %>
				</div>
			</div>
		</div>

	<p><%= javascript_include_tag "application" %> </p>