	<div class="container">
		<div class="row">
			<div class="col-md-4"> 
				<h1>Edit My Profile</h1>
					<p>Update any fields you want to edit:</p>

					<%= simple_form_for @profile, html: {class: 'form-horizontal'} do |f| %>

					<%= f.input :first_name %>
					<%= f.input :last_name %>
					<%= f.input :bio, label: "About Me"%>
					<%= f.input :birth_date, placeholder: "MM/DD/YYYY", as: :date_picker, label: "Birth Date" %>
					<%= f.input :street, label: "Street address"%>
					<%= f.input :city %>
					<%= f.input :state %>
					<%= f.input :zip %>
					<%= f.input :photo, as: :file, label: "Profile photo" %>
					<%= f.hidden_field :user_id, value: params[:user_id] %> 
					<%= f.submit "Update Profile"%>

					<% end %>
				</div>
			</div>
		</div>

	<p><%= javascript_include_tag "application" %> </p>

	